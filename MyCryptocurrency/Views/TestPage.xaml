<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MyCryptocurrency.Views.TestPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
	xmlns:vm="clr-namespace:MyCryptocurrency.ViewModels"
	Title="TestPage"
	x:DataType="vm:TestPageViewModel">
	<VerticalStackLayout>
		<chart:SfCartesianChart>

			<chart:SfCartesianChart.XAxes>
				<chart:DateTimeAxis />
			</chart:SfCartesianChart.XAxes>

			<chart:SfCartesianChart.YAxes>
				<chart:NumericalAxis />
			</chart:SfCartesianChart.YAxes>

			<chart:CandleSeries
				Close="ClosePrice"
				EnableSolidCandle="False"
				High="HighPrice"
				ItemsSource="{Binding KlineDataCollection}"
				Low="LowPrice"
				Open="OpenPrice"
				XBindingPath="AvgTime" />

		</chart:SfCartesianChart>
		<chart:SfCartesianChart>
			<chart:SfCartesianChart.XAxes>
				<chart:DateTimeAxis />
			</chart:SfCartesianChart.XAxes>

			<chart:SfCartesianChart.YAxes>
				<chart:NumericalAxis />
			</chart:SfCartesianChart.YAxes>

			<chart:LineSeries
				ItemsSource="{Binding TestDataCollection}"
				XBindingPath="AvgTime"
				YBindingPath="AvgPrice" />
		</chart:SfCartesianChart>
		<Button Command="{Binding RefreshDataCommand}" Text="Push Me!" />
	</VerticalStackLayout>
</ContentPage>