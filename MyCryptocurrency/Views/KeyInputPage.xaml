<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MyCryptocurrency.Views.KeyInputPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vm="clr-namespace:MyCryptocurrency.ViewModels"
	Title="KeyInputPage"
	x:DataType="vm:KeyInputViewModel">

	<VerticalStackLayout Padding="30,50,30,30" Spacing="25">
		<Label
			FontSize="20"
			HorizontalOptions="Center"
			Text="Enter your API Key" />
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>

			<Entry
				x:Name="ApiKeyEntry"
				Grid.Column="0"
				IsPassword="true"
				Placeholder="API Key"
				Text="{Binding ApiKey, Mode=TwoWay}" />
			<Button
				Grid.Column="1"
				Margin="20,0,0,0"
				Command="{Binding SaveApiKeyClickCommand}"
				HorizontalOptions="End"
				Text="Save"
				WidthRequest="100" />
		</Grid>

		<Label
			FontSize="20"
			HorizontalOptions="Center"
			Text="Enter your Private Key" />

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>

			<Entry
				x:Name="PrivateKeyEntry"
				Grid.Column="0"
				IsPassword="true"
				Placeholder="Private Key"
				Text="{Binding PrivateKey, Mode=TwoWay}" />
			<Button
				Grid.Column="1"
				Margin="20,0,0,0"
				Command="{Binding SavePrivateKeyClickCommand}"
				HorizontalOptions="End"
				Text="Save"
				WidthRequest="100" />
		</Grid>
	</VerticalStackLayout>
</ContentPage>