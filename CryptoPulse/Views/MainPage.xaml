<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="CryptoPulse.Views.MainPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:conv="clr-namespace:CryptoPulse.Converters"
	xmlns:models="clr-namespace:CryptoPulse.Models"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
	xmlns:vm="clr-namespace:CryptoPulse.ViewModels"
	x:DataType="vm:MainPageViewModel"
	BackgroundColor="{StaticResource BackgroundColor}">
	<ContentPage.Resources>
		<ResourceDictionary>
			<conv:BoolToColorConverter x:Key="BoolToColorConverter" />
			<conv:RemoveTrailingZerosConverter x:Key="RemoveTrailingZerosConverter" />
			<toolkit:BoolToObjectConverter
				x:Key="BoolToArrow"
				FalseObject="▼"
				TrueObject="▲" />
			<toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
		</ResourceDictionary>
	</ContentPage.Resources>
	<StackLayout>
		<ActivityIndicator
			IsRunning="{Binding ActivityIndicatorIsRunning}"
			IsVisible="{Binding ActivityIndicatorIsRunning}"
			Color="{StaticResource TextColor}" />
		<StackLayout IsVisible="{Binding ActivityIndicatorIsRunning, Converter={toolkit:InvertedBoolConverter}}" VerticalOptions="FillAndExpand">
			<CollectionView
				x:Name="CryptoPairsCollectionView"
				Margin="10"
				HorizontalOptions="FillAndExpand"
				ItemsSource="{Binding CryptoPairs}"
				SelectionMode="None"
				VerticalOptions="FillAndExpand">
				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="models:CryptocurrencyPair">
						<Border
							Margin="5"
							Padding="10"
							BackgroundColor="{StaticResource SecondaryColor}"
							StrokeThickness="0">
							<Border.StrokeShape>
								<RoundRectangle CornerRadius="10" />
							</Border.StrokeShape>
							<Grid ColumnSpacing="13">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="0.61*" />
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>
								<Grid.RowDefinitions>
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
									<RowDefinition Height="Auto" />
								</Grid.RowDefinitions>

								<!--  Symbol  -->
								<Label
									Grid.Row="0"
									Grid.Column="0"
									FontAttributes="Bold"
									FontSize="16"
									Text="{Binding CurrencyName1}"
									TextColor="#37474F" />
								<!--  Price  -->
								<Label
									Grid.Row="1"
									Grid.Column="0"
									FontSize="14"
									Text="Cena:"
									TextColor="#6B7280" />
								<Label
									Grid.Row="1"
									Grid.Column="1"
									Margin="0,0,20,0"
									FontAttributes="Bold"
									TextColor="{Binding PriceColor}"
									VerticalOptions="Start">
									<Label.Text>
										<MultiBinding StringFormat="{}{0:0.######} {1}">
											<Binding Path="CurrentExchangeRate" />
											<Binding Path="CurrencyName2" />
										</MultiBinding>
									</Label.Text>
								</Label>
								<!--  Only for already using crypto pairs  -->
								<!--  Direction  -->
								<Label
									Grid.Row="3"
									Grid.Column="0"
									FontSize="14"
									IsVisible="{Binding FoundLastOperation}"
									Text="Kierunek:"
									TextColor="#6B7280" />
								<Label
									Grid.Row="3"
									Grid.Column="1"
									Margin="0,0,20,0"
									FontAttributes="Bold"
									IsVisible="{Binding FoundLastOperation}"
									Text="{Binding LastOperationPair}"
									TextColor="Black"
									VerticalOptions="Start" />

								<!--  Change from last transaction and current price  -->
								<Label
									Grid.Row="4"
									Grid.Column="0"
									FontSize="14"
									IsVisible="{Binding FoundLastOperation}"
									Text="Zmiana ceny:"
									TextColor="#6B7280" />
								<Label
									Grid.Row="4"
									Grid.Column="1"
									Margin="0,0,20,0"
									FontAttributes="Bold"
									FontSize="14"
									IsVisible="{Binding FoundLastOperation}"
									TextColor="Black"
									VerticalOptions="Start">
									<Label.FormattedText>
										<FormattedString>
											<!--  Difference on price  -->
											<Span FontAttributes="Bold" Text="{Binding DifferenceFromCurrent, StringFormat='{0:0.00####}'}" />
											<Span Text="    " />
											<!--  Percentage on price  -->
											<Span
												FontAttributes="Bold"
												Text="{Binding PercentageFromCurrent, StringFormat='{0:F2}%'}"
												TextColor="{Binding PercentageIsPositiveNumber, Converter={StaticResource BoolToColorConverter}}" />
											<!--  Arrow singn  -->
											<Span
												FontAttributes="Bold"
												Text="{Binding PercentageIsPositiveNumber, Converter={StaticResource BoolToArrow}}"
												TextColor="{Binding PercentageIsPositiveNumber, Converter={StaticResource BoolToColorConverter}}" />
										</FormattedString>
									</Label.FormattedText>
								</Label>

								<!--  Ostatnia Operacja  -->
								<Label
									Grid.Row="5"
									Grid.Column="0"
									FontSize="14"
									IsVisible="{Binding FoundLastOperation}"
									Text="Ost. operacja:"
									TextColor="#6B7280" />
								<Label
									Grid.Row="5"
									Grid.Column="1"
									Margin="0,0,20,0"
									FontAttributes="Bold"
									IsVisible="{Binding FoundLastOperation}"
									TextColor="Black"
									VerticalOptions="Start">
									<Label.Text>
										<MultiBinding StringFormat="{}{0:0.00###} {1}">
											<Binding Path="LastOperation.Price" />
											<Binding Path="CurrencyName2" />
										</MultiBinding>
									</Label.Text>
								</Label>
								<!--  Przyciski  -->
								<StackLayout
									Grid.RowSpan="6"
									Grid.Column="2"
									Orientation="Vertical"
									Spacing="10"
									VerticalOptions="Center">
									<Button
										BackgroundColor="{StaticResource PrimaryColor}"
										Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowDetailsCommand}"
										CommandParameter="{Binding .}"
										CornerRadius="5"
										FontAttributes="Bold"
										FontSize="12"
										Text="Szczegóły"
										TextColor="{StaticResource SecondaryColor}" />
								</StackLayout>
							</Grid>
						</Border>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</StackLayout>
	</StackLayout>
</ContentPage>
